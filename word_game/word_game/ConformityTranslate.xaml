<Window x:Class="word_game.ConformityTranslate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:word_game"
        mc:Ignorable="d"
        Title="ConformityTranslate" 
        WindowStartupLocation="CenterScreen"
        Height="450" Width="284">
    <Window.Background>
        <ImageBrush ImageSource="Resource\backGroundForApp.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="35*"></RowDefinition>
            <RowDefinition Height="110*"></RowDefinition>
            <RowDefinition Height="55*"></RowDefinition>
            <RowDefinition Height="55*"></RowDefinition>
            <RowDefinition Height="147*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="180*"></ColumnDefinition>
            <ColumnDefinition Width="180*"></ColumnDefinition>
            <ColumnDefinition  Width="6*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Height="120"  Source="Resource\caveManWitch.png" />

        <TextBlock Name="TextBlockTranslate"  Text="Word" FontSize="25" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="2" TextAlignment="Center"/>

        <Button Name="BtnVar2" FontSize="16" Margin="4" Background="SteelBlue" Content="вариант 2" Grid.Row="3" Grid.Column="2" Click="BtnVar2_Click"></Button>
        <Button Name="BtnVar1" FontSize="16" Margin="4" Background="SteelBlue" Content="вариант 1" Grid.Row="3" Grid.Column="1" Click="BtnVar1_Click"></Button>
        <Button Name="BtnVar4" FontSize="16" Margin="4" Background="SteelBlue" Content="вариант 4" Grid.Row="4" Grid.Column="2" Click="BtnVar4_Click"></Button>
        <Button Name="BtnVar3" FontSize="16" Margin="4" Background="SteelBlue" Content="вариант 3" Grid.Row="4" Grid.Column="1" Click="BtnVar3_Click"></Button>
        
    </Grid>
</Window>
